@model List<Message>
@{
    ViewData["Title"] = "Incoming Messages";
    int num=1;
}

<div class="container">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Incoming Messages</h4>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Email
                                </th>
                                <th>
                                    Subject
                                </th>
                                <th>
                                    Message
                                </th>
                                <th class="text-center">
                                    Options
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                           @foreach (var message in Model)
                            {
                                <tr>
                                    <td>
                                        @num
                                    </td>
                                    <td>
                                        @message.Name
                                    </td>
                                    <td>
                                        @message.Email
                                    </td>
                                    <td>
                                        @message.Subject
                                    </td>
                                    <td>
                                        @message.Text
                                    </td>
                                </tr>
                                num++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

