@model List<Category>
@{
    ViewData["Title"] = "Main";
    int num = 1;
    int productCount = 0;
    int count = 0;
}

<div class="container">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Categories</h4>
                <div class="d-flex justify-content-end">
                    <a asp-controller="Categories" asp-action="Create" class="btn btn-success"><i class="mdi mdi-folder-plus"></i></a>
                </div>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    #
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Products
                                </th>
                                <th class="text-center">
                                    Image
                                </th>
                                <th class="text-center">
                                    Options
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var category in Model)
                            {
                                count = 0;
                                productCount = 0;
                                <tr>
                                    <td>
                                        @num
                                    </td>
                                    <td>
                                        @category.Name
                                    </td>
                                    <td>
                                        @foreach (var product in category.Products)
                                        {
                                            productCount++;
                                            count += 5;
                                        }
                                        <div>
                                            <div class="mb-2">total @productCount product(s)</div>
                                            <div class="progress">
                                                <div class="progress-bar bg-success" role="progressbar" style="width: @count%" aria-valuenow="@count" aria-valuemin="0" aria-valuemax="100"></div>
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        @if (category.Image != null)
                                        {
                                            <div class="d-flex justify-content-center">
                                                <image src="/img/@category.Image"></image>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="text-center">No Image detected.</div>
                                        }
                                    </td>
                                    <td>
                                        <div class="d-flex justify-content-center">
                                            <a asp-action="Update" asp-route-id="@category.Id" class="btn btn-warning m-3"><i class="mdi mdi-pencil"></i></a>
                                            <a asp-controller="Categories" asp-action="Delete" asp-route-id="@category.Id" data-bs-toggle="modal" data-bs-target="#confirmDelete" class=" btn btn-danger m-3"><i class="mdi mdi-playlist-remove"></i></a>
                                        </div>
                                    </td>
                                </tr>
                                num++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    Swal.fire({
        title: 'Are you sure?',
        text: "You won't be able to revert this!",
        icon: 'warning',
        showCancelButton: true,
        confirmButtonColor: '#3085d6',
        cancelButtonColor: '#d33',
        confirmButtonText: 'Yes, delete it!'
    }).then((result) => {
        result

        if (result.isConfirmed) {
            Swal.fire(
                'Deleted!',
                'Your file has been deleted.',
                'success'
            )
        }
    })
</script>
