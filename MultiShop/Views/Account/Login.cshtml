@model LoginDto
@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="shadow-lg rounded p-4 p-sm-5 bg-white form">
        <h3 class="fw-bold">Login</h3>
        <p class="text-muted">Welcome back!</p>
        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
        <!-- Login Form-->
        <form class="mt-4" method="post">
            <div class="form-group">
                <label class="form-label" asp-for="UserName">Username</label>
                <input asp-for="UserName" type="text" class="form-control" placeholder="Example123">
            </div>
            <div class="form-group">
                <label asp-for="Password" class="form-label d-flex justify-content-between align-items-center">
                    Password
                    <a href="./forgot-password.html" class="text-muted small ms-2 text-decoration-underline">
                        Forgotten
                        password?
                    </a>
                </label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password">
            </div>
            <button type="submit" class="btn btn-warning d-block w-100 my-4">Login</button>
        </form>
        <!-- / Login Form -->

        <p class="d-block text-center text-muted small">New customer? <a class="text-muted text-decoration-underline" asp-controller="Account" asp-action="Register">Sign up for an account</a></p>
    </div>
</div>

