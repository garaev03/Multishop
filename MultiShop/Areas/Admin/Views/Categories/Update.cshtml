@model CategoryUpdateDto
@{
    ViewData["Title"] = "Update Category";
}

<div>
    <div class="mb-4" style="font-size: 25px">
        Update Category
    </div>
    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="@Model.categoryGetDto.Name">Category Name</label>
            <input asp-for="@Model.categoryPostDto.Name" value="@Model.categoryGetDto.Name" type="text" class="form-control" placeholder="Type here...">
            <span asp-validation-for="@Model.categoryPostDto.Name" class="text text-danger "></span>
        </div>
        <div class="form-group">
            <label asp-for="@Model.categoryPostDto.formFile" class="form-label">File Upload</label>
            <input asp-for="@Model.categoryPostDto.formFile" class="form-control" accept="image/*" />
            <span asp-validation-for="@Model.categoryPostDto.formFile" class="text text-danger "></span>
            <small class="text-muted">Please, select image under 2MB</small>
            <div class="m-3">
                <img src="~/assets/img/category-images/@Model.categoryGetDto.Image" />
            </div>
        </div>
        <div>
            <input hidden asp-for="@Model.categoryGetDto.Id" />
        </div>
        <button type="submit" class="btn btn-success text-light">Submit</button>
        <a asp-controller="Categories" asp-action="Index" class="btn btn-outline-danger">Cancel</a>
    </form>
</div>


